{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "allowJs": true,
    "target": "esnext",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "exclude": ["dist"],
  "include": ["src/**/*"]
}
